@using Statement.Core.Dtos.Factor
@model AddFactorDto

@section Styles{
    <link href="~/statics/lib/css/form.css" rel="stylesheet" />
}
@{
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}
<div class="col-sm-6">
    @using (Html.BeginForm("Create", "Factor", FormMethod.Post))
    {
        <div class="container">
            <h2>Create Factor</h2>

            <div class="row">
                <div class="col-25">
                    @Html.LabelFor(a => a.Price)
                </div>
                <div class="col-75">
                    @Html.TextBoxFor(a => a.Price, new { placeholder = "Please Enter Price ..." })
                </div>
                @Html.ValidationMessageFor(a => a.Price, "", new { @class = "help-block" })
            </div>
            <div class="row">
                @Html.LabelFor(a => a.CustomerId)
                @Html.DropDownListFor(a => a.CustomerId, Model.Customer, new { @class = "form-control" })
            </div>
            <div class="row">
                <button type="submit">Save</button>
                <button type="reset"> Cancel</button>
            </div>
        </div>
    }
</div>

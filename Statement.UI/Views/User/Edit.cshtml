@using Statement.Core.Dtos.User
@model EditUserDto

@section Styles{
    <link href="~/statics/lib/css/form.css" rel="stylesheet" />
}
<div class="col-sm-6">
    @using (Html.BeginForm("Edit", "User", FormMethod.Post))
    {
        <div class="container">
            <h2>Edit User</h2>
            @Html.HiddenFor(a => a.Id)
            <div class="row">
                <div class="col-25">
                    @Html.LabelFor(a => a.FirstName)
                </div>
                <div class="col-75">
                    @Html.TextBoxFor(a => a.FirstName, new { placeholder = "Please Enter First name ..." })
                </div>
                @Html.ValidationMessageFor(a => a.FirstName, "", new { @class = "help-block" })
            </div>
            <div class="row">
                <div class="col-25">
                    @Html.LabelFor(a => a.LastName)
                </div>
                <div class="col-75">
                    @Html.TextBoxFor(a => a.LastName, new { placeholder = "Please Enter Last name ..." })
                </div>
                @Html.ValidationMessageFor(a => a.LastName, "", new { @class = "help-block" })
            </div>
            <div class="row">
                <div class="col-25">
                    @Html.LabelFor(a => a.Password)
                </div>
                <div class="col-75">
                    @Html.TextBoxFor(a => a.Password, new { placeholder = "Please Enter Password ..." })
                </div>
                @Html.ValidationMessageFor(a => a.Password, "", new { @class = "help-block" })
            </div>
            <div class="row">
                <div class="col-25">
                    @Html.LabelFor(a => a.ConfirmedPassword)
                </div>
                <div class="col-75">
                    @Html.TextBoxFor(a => a.ConfirmedPassword, new { placeholder = "Please Enter Confirmed Password ..." })
                </div>
                @Html.ValidationMessageFor(a => a.ConfirmedPassword, "", new { @class = "help-block" })
            </div>
            <div class="row">
                <button type="submit">Save</button>
                <button type="reset">Cancel</button>
            </div>
        </div>
    }
</div>

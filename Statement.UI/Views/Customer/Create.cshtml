@using Statement.Core.Dtos.Customer
@model AddCustomerDto

@section Styles{
    <link href="~/statics/lib/css/form.css" rel="stylesheet" />
}
@{
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}
<div class="col-sm-6">
    @using (Html.BeginForm("Create", "Customer", FormMethod.Post))
    {
        <div class="container">
            <h2>Create Customer</h2>

            <div class="row">
                <div class="col-25">
                    @Html.LabelFor(a => a.FirstName)
                </div>
                <div class="col-75">
                    @Html.TextBoxFor(a => a.FirstName, new { placeholder = "Please Enter First name ..." })
                </div>
                @Html.ValidationMessageFor(a => a.FirstName, "", new { @class = "help-block" })
            </div>
            <div class="row">
                <div class="col-25">
                    @Html.LabelFor(a => a.LastName)
                </div>
                <div class="col-75">
                    @Html.TextBoxFor(a => a.LastName, new { placeholder = "Please Enter Last name ..." })
                </div>
                @Html.ValidationMessageFor(a => a.LastName, "", new { @class = "help-block" })
            </div>
            <div class="row">
                <div class="col-25">
                    @Html.LabelFor(a => a.Email)
                </div>
                <div class="col-75">
                    @Html.TextBoxFor(a => a.Email, new { placeholder = "Please Enter Email ..." })
                </div>
                @Html.ValidationMessageFor(a => a.Email, "", new { @class = "help-block" })
            </div>
            <div class="row">
                <div class="col-25">
                    @Html.LabelFor(a => a.CellPhone)
                </div>
                <div class="col-75">
                    @Html.TextBoxFor(a => a.CellPhone, new { placeholder = "Please Enter Mobile number ..." })
                </div>
                @Html.ValidationMessageFor(a => a.CellPhone, "", new { @class = "help-block" })
            </div>

            <div class="row">
                <button type="submit">Save</button>
                <button type="reset"> Cancel</button>
            </div>
        </div>
    }
</div>

@using Statement.Core.Dtos.Material
@model AddMaterialDto

@section Styles{
    <link href="~/statics/lib/css/form.css" rel="stylesheet" />
}
<div class="col-sm-6">
    @using (Html.BeginForm("Create", "Material", FormMethod.Post))
    {
        <div class="container">
            <h2>Create Material</h2>

            <div class="row">
                <div class="col-25">
                    @Html.LabelFor(a => a.Name)
                </div>
                <div class="col-75">
                    @Html.TextBoxFor(a => a.Name, new { placeholder = "Please Enter Material Name ..." })
                </div>
                @Html.ValidationMessageFor(a => a.Name, "", new { @class = "help-block" })
            </div>
            <div class="row">
                <button type="submit">Save</button>
                <button type="reset"> Cancel</button>
            </div>
        </div>
    }
</div>
